const { item } = Astro.props;

/** æ ¹æ® season_id ç”Ÿæˆç•ªå‰§æ’­æ”¾é¡µé“¾æ¥ */
function buildSeasonUrl(seasonId: number): string {
	return `https://www.bilibili.com/bangumi/play/ss${seasonId}`;
}

/** è§„èŒƒåŒ–å°é¢åœ°å€å¹¶æä¾›å¤šå­—æ®µå›é€€ */
function resolveCoverUrl(it: BiliSeasonItem): string | null {
	const candidates = [
		it.cover,
		it.square_cover,
		it.horizontal_cover_16_10,
		it.horizontal_cover,
	].filter(Boolean) as string[];
	if (candidates.length === 0) return null;
	let url = candidates[0];
	if (url.startsWith("//")) {
		url = `https:${url}`;
	}
	if (url.startsWith("http://")) {
		url = url.replace("http://", "https://");
	}
	return url;
}
---

<a
    href={buildSeasonUrl(item.season_id)}
    target="_blank"
    rel="noopener noreferrer nofollow"
    class="group relative overflow-hidden rounded-xl bg-white dark:bg-gray-800 shadow-lg hover:shadow-2xl transition-all duration-200 hover:scale-105 block"
>
    <div class="aspect-[2/3] relative overflow-hidden">
        {
            resolveCoverUrl(item) ? (
                <img
                    src={resolveCoverUrl(item)!}
                    alt={item.title}
                    class="w-full h-full object-cover pointer-events-none"
                    loading="lazy"
                    referrerpolicy="no-referrer"
                />
            ) : (
                <div class="w-full h-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
